{
    "configurations": [
        {
            "name": "Debug",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "deno",
            "smartStep": true,
            "skipFiles": [
                "${workspaceFolder}/src/node_modules/**/*.js",
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**"
            ],
            "program": "npm:vite",
            "runtimeArgs": [
                "run",
            ],
            "args": [
                "--no-open",
            ],
            "sourceMaps": true,
            "serverReadyAction": {
                "action": "debugWithChrome",
                "killOnServerStop": true,
                "pattern": "Local:   http://localhost:([0-9]+)/",
                "uriFormat": "http://localhost:%s"
            }
        }
    ]
}