{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "serve": "deno run -A npm:vite",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check **/*.ts **/*.js",
    "type-check": "deno check --no-emit **/*.ts"
  },
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.0",
    "tinyqueue": "npm:tinyqueue@3.0.0"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "checkJs": true,
    "lib": [
      "deno.window",
      "dom"
    ]
  }
}
